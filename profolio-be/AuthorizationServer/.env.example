# Environment Variables Template
# Copy this file to .env and fill in your values

# Server Configuration
SERVER_PORT=9000

# Database Configuration
DATABASE_URL=jdbc:postgresql://localhost:5432/authdb
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=12345
DB_POOL_SIZE=10

# OAuth2 Configuration
ISSUER_URL=http://localhost:9000
KEYSTORE_PASSWORD=password
KEYSTORE_ALIAS=auth-server
KEY_PASSWORD=password

# OAuth Client Configuration
OAUTH_CLIENT_ID=auth-code-client
OAUTH_CLIENT_SECRET=secret123
OAUTH_REDIRECT_URIS=http://localhost:3000/callback,http://localhost:8081/

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8081

# Frontend Configuration
FRONTEND_LOGIN_URL=http://localhost:3000/login

# Logging Configuration
LOG_LEVEL=INFO
APP_LOG_LEVEL=DEBUG
SECURITY_LOG_LEVEL=INFO
OAUTH_LOG_LEVEL=DEBUG
LOG_FILE=logs/auth-server.log

# Actuator Configuration
HEALTH_SHOW_DETAILS=when-authorized

# JPA Configuration
SHOW_SQL=false
